# reGen Server Development Dockerfile
# Optimized for development with hot reload and debugging

FROM python:3.10-slim AS development

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONPATH=/app \
    APP_ENV=dev \
    DEBUG=true

# Install system dependencies including Node.js
RUN apt-get update && apt-get install -y \
    build-essential \
    pkg-config \
    default-libmysqlclient-dev \
    curl \
    git \
    && curl -fsSL https://deb.nodesource.com/setup_18.x | bash - \
    && apt-get install -y nodejs \
    && rm -rf /var/lib/apt/lists/*

# Create and set working directory
WORKDIR /app

# Copy dependency files
COPY pyproject.toml ./

# Install Python dependencies (including dev dependencies)
RUN pip install --no-cache-dir -e ".[dev]"

# Copy application code
COPY app/ ./app/
COPY frontend/ ./frontend/
COPY scripts/ ./scripts/

# Make startup script executable
RUN chmod +x ./scripts/dev-start.sh

# Create necessary directories
RUN mkdir -p /app/logs

# Expose the port the app runs on
EXPOSE 8000

# Health check
HEALTHCHECK --interval=30s --timeout=30s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Default command with reload enabled for development
# Use startup script that builds frontend first
CMD ["./scripts/dev-start.sh"]
